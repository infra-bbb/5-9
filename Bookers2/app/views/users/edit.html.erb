<html>
  <body>
  <div class='body'>
    <div class='container'>
      <% if @user.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved:</h2>
          <ul>
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <h2>User info</h2>
      <%= form_for(@user) do |f| %>
        <div class='field'>
          <label for="user_name">Name</label>
          <%= f.text_field :name, :class => 'user_name' %>
        </div>
        <div class='field'>
          <label for="user_image">Image</label>
          <%= f.attachment_field :profile_image, :class => 'profile_image' %>
        </div>
          <label for="user_introduction">Introduction</label>
        <div class='actions'>
          <%= f.text_area :introduction, :class => 'user_introduction' %>
          <%= f.submit 'Update User' %>
        </div>
      <% end %>
    </div>
  </div>
  </body>
</html>